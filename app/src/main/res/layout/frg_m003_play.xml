<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_player"
    android:gravity="top"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/action_bar_main" />

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_stop_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:src="@drawable/ic_stop_game"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <ImageView
                    android:id="@+id/iv_change_question"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/bg_use_change_question"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/iv_50_50"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/bg_use_50_50"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/iv_help_audiance"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/bg_use_help_audiance"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/bg_use_help_call"
                    tools:ignore="ContentDescription" />
            </TableRow>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:padding="10dp">

                <View
                    android:layout_width="350dp"
                    android:layout_gravity="center"
                    android:layout_height="200dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/bg_circle" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:background="@drawable/bg_question"
                    android:gravity="center"
                    android:text="Câu 1"
                    android:textColor="@color/colorTin"
                    android:textSize="30sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_question"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:text="@string/question"
                    android:textColor="@color/orange"
                    android:textSize="20sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_case_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/iv_case_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_answer"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_case_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="A. Hai"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </FrameLayout>

            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/iv_case_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_answer"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_case_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="B. Ba"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/iv_case_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_answer"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_case_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="C. Năm"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/iv_case_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_answer"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_case_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="D. Đứa"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical">

            <include
                android:id="@+id/include_info"
                layout="@layout/view_info" />
        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>